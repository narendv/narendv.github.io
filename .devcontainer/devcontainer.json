{
  "name": "Academic Jekyll",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/site,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/site",
  "forwardPorts": [4000],
  "postCreateCommand": "bundle install",
  "customizations": {
    "vscode": {
      "extensions": ["github.vscode-pull-request-github"]
    }
  }
}